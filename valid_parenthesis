def isValid(s: str) -> bool:
    stack = []

    # Mapping of closing to opening brackets
    matching = {
        ')': '(',
        ']': '[',
        '}': '{'
    }

    for char in s:
        if char in '([{':
            # Opening bracket - push to stack
            stack.append(char)
        else:
            # Closing bracket - check for match
            if not stack or stack[-1] != matching[char]:
                return False
            stack.pop()

    # Valid only if all brackets were matched
    return len(stack) == 0
